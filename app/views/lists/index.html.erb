<% content_for :title do %>
List Index
<% end %>
<div class="row">
	<div class="span12">
		Lists > 
	</div>
</div>

<h3>List Index</h3>

<% if can? :create, @lists %>
	<div class="row">
		<div class="span12">
			<%= link_to "New List",new_list_path,"class" => "btn btn-success" %>
		</div>
	</div>
<% end %> 
<table class="table table-striped">
<tr>
	<th><h4>List</h4></th>
	<th><h4>Size</h4></th>
	<th><h4>Faction</h4></th>
	<th><h4>Caster</h4></th>
	<th><h4>User</h4></th>
	<th></th>
	<th></th>
</tr>
<% @lists.each do |list| %>
<tr>
		<td><%= link_to list.title,list_path(list.id) %> </td>	
		<td><%= list.size %></td>
		<td><%= link_to Faction.find(list.faction_id).title, faction_path(list.faction_id)  %> </td>
		<td><%= link_to Caster.find(list.caster_id).title, caster_path(list.caster_id) %></td>
		<td><%= link_to User.find(list.user_id).name, user_path(list.user_id) %></td>
		<% if can? :update, list %>
			<td>
				<%= link_to 'Destroy', list_path(list), method: :delete, data: { confirm: 'Are you sure?'},"class"=> "btn btn-danger" %>
			</td>
			<td>
				<%= link_to 'Edit', edit_list_path(list),"class"=> "btn btn-primary" %>
			</td>
		<% end %>
</tr>
<% end %>
</table>
