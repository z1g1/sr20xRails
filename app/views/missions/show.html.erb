<% content_for :title do %>
<%= @mission.name %>
<% end %>

<div class="row">
	<div class="span12">
		<%= link_to 'Missions', Mission %> > <%= link_to Packet.find(@mission.packet_id).title, packet_path(@mission.packet.id) %> >  <%= @mission.name %>
	</div>
</div>

<h3>Mission #<%= @mission.id %> <%= @mission.name %></h3>

<% if can? :update, @mission %>
	<div class="row">
		<div class="span2">
			<%= link_to "Edit Mission",edit_mission_path,"class" => "btn btn-success" %>
		</div>
		<div class="span2">
			<%= link_to 'Destroy', mission_path(@mission), method: :delete, data: { confirm: 'Are you sure?'},"class"=> "btn btn-danger" %>
		</div>
	</div>
<% end %>
<div class="row">

	<div class="span8">
		<h4>Victory</h4>
		<%= @mission.victory.gsub('&lt;','<').gsub('&gt;','>').html_safe %>
		<h4>Special Rules</h4>
		<%= @mission.specialRules.gsub('&lt;','<').gsub('&gt;','>').html_safe %>
		<h4>Tactical Tip</h4>
		<%= @mission.tacticalTips.gsub('&lt;','<').gsub('&gt;','>').html_safe %>
	</div>
	<div class="span4">
		<img src="http://sr20x.com/static/img/<%= @mission.map %>"></img>
	</div>
</div>
<% if @mission.objective? %>
	<div class="row">
		<div class="span4 offset8">
	    <img src="http://sr20x.com/static/img/<%= @mission.objective %>"></img>
		</div>	
	</div>
<% end %>
