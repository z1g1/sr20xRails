<h1>List All Missions </h1>

<div class="row">
	<div class="col-md-2"><h2>Mission</h2></div>
	<div class="col-md-7"><h2>Special Rules</h2></div>
	<div class="col-md-3"><h2>Map</h2></div>
</div>
<% @missions.each do |mission| %>
<div class="row">
		<div class="col-md-2"><h3><%= link_to mission.name,mission_path(mission.id) %></h3></div>
		<div class="col-md-7"><%= mission.specialRules.gsub('&lt;','<').gsub('&gt;','>').html_safe %></div>
		<div class="col-md-3"><img class="img-thumbnail" src="http://sr20x.com/static/img/<%= mission.map %>" alt="<%= mission.name %>"></img></div>
</div>
	<% end %>
