		<%= link_to 'Factions', Faction %> > <%= link_to @faction.title,faction_path(@faction.id) %> > <%= @caster.title %>
	</div>
</div>

<h3><%= @caster.title %></h3>
<% if can? :update, @caster %>
	<div class="row">
		<div class="span12">
		<%= link_to 'Edit', edit_caster_path(@caster),"class" => "btn btn-primary" %>
		<%= link_to 'Destroy', caster_path(@caster), method: :delete, data: { confirm: 'Are you sure?'},"class"=> "btn btn-danger" %>
		</div>
	</div>
<% end %>

