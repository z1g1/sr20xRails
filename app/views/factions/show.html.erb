<% content_for :title do %>
<%= @faction.title %>
<% end %>
<div class="row">
	<div class="span12">
		<%= link_to 'Factions', Faction %> > <%= @faction.title %>
	</div>
</div>

<h3><%= @faction.title %></h3>

<% if can? :update, @factions %>
	<div class="row">
		<div class="span2">
			<%= link_to "Edit Faction",edit_faction_path,"class" => "btn btn-success" %>
		</div>
		<div class="span2">
			<%= link_to 'Destroy', faction_path(@faction), method: :delete, data: { confirm: 'Are you sure?'},"class"=> "btn btn-danger" %>
		</div>
	</div>
<% end %> 

<div class="row">
	<div class="span2">
		<img class="img-thumbnail" src="http://sr20x.com/static/img/<%= @faction.logo %>" alt="<%= @faction.title %>"></img>
	</div>
	<div class="span10">
		View recent lists:
	</div>
</div>
<table class="table table-striped">
<tr>
	<th><h4>Faction</h4></th>
	<th><h4>How Many Lists</h4></th>
	<th><h4>Recent Lists</h4></th>
</tr>
<% @casters.each do |caster| %>
<tr>
	<td>
		<%= link_to caster.title,caster_path(caster.id) %>
	</td>
	<td>
		<%= List.where("caster_id = ?", caster.id).count %>
	</td>
	<td>
		<% @RecentList = List.where("caster_id = ?", caster.id).each do |list| %>
			<%= list.title %>
		<% end %>
	</td>
</tr>
<% end %>
